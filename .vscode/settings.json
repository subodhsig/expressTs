  /* =========================
     Enhanced Font Settings
     ========================= */
  "editor.fontFamily": "'Fira Code', 'JetBrains Mono', 'Cascadia Code', 'SF Mono', Monaco, 'Courier New', monospace",
  "editor.fontSize": 14,
  "editor.fontLigatures": true,
  "editor.lineHeight": 1.6,
  "editor.letterSpacing": 0.3,
  "editor.fontWeight": "400",
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,

  /* Terminal Font */
  "terminal.integrated.fontFamily": "'FiraCode Nerd Font', 'MesloLGS NF', 'JetBrains Mono', monospace",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.lineHeight": 1.4,
  "terminal.integrated.fontWeight": "400",
  "terminal.integrated.letterSpacing": 0.2,

  /* Debug Console Font */
  "debug.console.fontFamily": "'Fira Code', 'JetBrains Mono', monospace",
  "debug.console.fontSize": 13,

  /* =========================
     Enhanced Editor Settings
     ========================= */
  "editor.renderWhitespace": "boundary",
  "editor.renderLineHighlight": "all",
  "editor.guides.bracketPairs": true,
  "editor.guides.indentation": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.inlayHints.enabled": "on",
  "editor.minimap.enabled": true,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.maxColumn": 80,
  "editor.padding.top": 16,
  "editor.padding.bottom": 16,

  /* Window Settings */
  "window.titleBarStyle": "custom",
  "workbench.tree.indent": 16,
  "workbench.tree.renderIndentGuides": "always",

  /* =========================
     Token Colorization
     ========================= */
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": ["comment", "punctuation.definition.comment"],
        "settings": {
          "foreground": "#6b7280",
          "fontStyle": "italic"
        }
      },
      {
        "scope": ["string", "string.quoted"],
        "settings": {
          "foreground": "#10b981"
        }
      },
      {
        "scope": ["constant.numeric", "constant.language"],
        "settings": {
          "foreground": "#fbbf24"
        }
      },
      {
        "scope": ["keyword", "storage.type", "storage.modifier"],
        "settings": {
          "foreground": "#a78bfa",
          "fontStyle": "bold"
        }
      },
      {
        "scope": ["entity.name.function", "support.function"],
        "settings": {
          "foreground": "#7dd3fc",
          "fontStyle": "bold"
        }
      },
      {
        "scope": ["entity.name.type", "entity.name.class"],
        "settings": {
          "foreground": "#22d3ee",
          "fontStyle": "bold"
        }
      },
      {
        "scope": ["variable", "variable.other"],
        "settings": {
          "foreground": "#e1e4e8"
        }
      },
      {
        "scope": ["variable.parameter"],
        "settings": {
          "foreground": "#fda4af",
          "fontStyle": "italic"
        }
      },
      {
        "scope": ["entity.name.tag"],
        "settings": {
          "foreground": "#fb7185",
          "fontStyle": "bold"
        }
      },
      {
        "scope": ["entity.other.attribute-name"],
        "settings": {
          "foreground": "#a78bfa",
          "fontStyle": "italic"
        }
      },
      {
        "scope": ["support.type.property-name"],
        "settings": {
          "foreground": "#7dd3fc"
        }
      },
      {
        "scope": ["meta.object-literal.key"],
        "settings": {
          "foreground": "#22d3ee"
        }
      },
      {
        "scope": ["punctuation"],
        "settings": {
          "foreground": "#9ca3af"
        }
      },
      {
        "scope": ["markup.heading"],
        "settings": {
          "foreground": "#7dd3fc",
          "fontStyle": "bold"
        }
      },
      {
        "scope": ["markup.bold"],
        "settings": {
          "foreground": "#fbbf24",
          "fontStyle": "bold"
        }
      },
      {
        "scope": ["markup.italic"],
        "settings": {
          "foreground": "#a78bfa",
          "fontStyle": "italic"
        }
      }
    ]
  }
}
